---
import Layout from "../layouts/Page.astro";
import { SOCIAL_LINKS } from "../consts";
---

<!doctype html>
<Layout
  title="Links - Connect with Isiah Fletcher on Social Media"
  description="Find Isiah Fletcher on Substack, Facebook, Instagram, YouTube, and more. Connect for drumming sessions, software development inquiries, and creative collaborations."
>
  <div class="links">
    <a href="/"> My Portfolio</a>

    <a href={SOCIAL_LINKS.substack} target="__blank"> Substack</a>

    <a href={SOCIAL_LINKS.facebook} target="_blank"> Facebook</a>

    <a href={SOCIAL_LINKS.instagram} target="_blank"> Instagram</a>

    <a href={SOCIAL_LINKS.youtube} target="__blank"> Youtube</a>
  </div>
</Layout>

<style>
  .links {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .links a {
    display: block;
    width: 300px;
    max-width: 90%;
    margin: 1rem auto;
    padding: 1rem 1.5rem;
    text-align: center;
    font-size: 1.125rem;
    font-weight: bold;
    color: rgba(var(--white), 1);
    background: linear-gradient(
      135deg,
      rgb(var(--accent-dark)),
      rgb(var(--accent))
    );
    border: var(--accent) 2px solid;
    border-radius: 12px;
    box-shadow: var(--box-shadow);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .links a:hover {
    color: rgb(var(--accent-bright));
    background: linear-gradient(
      135deg,
      rgba(var(--accent-dark), 0.8),
      rgba(var(--accent), 0.8)
    );
    box-shadow:
      0 0 20px rgba(var(--accent-bright), 0.5),
      0 0 40px rgba(var(--accent-bright), 0.25),
      var(--box-shadow);
    transform: translateY(-2px);
  }

  .links a:active {
    transform: scale(0.97);
    box-shadow:
      0 0 10px rgba(var(--accent-bright), 0.7),
      var(--box-shadow);
  }
</style>
